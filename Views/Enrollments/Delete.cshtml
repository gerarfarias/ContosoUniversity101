@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h1>Delete Enrollment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.Student?.LastName, @Model.Student?.FirstName</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course?.Title</dd>

        <dt class="col-sm-2">Grade</dt>
        <dd class="col-sm-10">@Model.Grade?.ToString() ?? "No grade"</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>