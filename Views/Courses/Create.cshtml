@model ContosoUniversity101.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<h1>Create Course</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" role="alert"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Credits" class="form-label"></label>
                <input asp-for="Credits" class="form-control" type="number" min="0" />
                <span asp-validation-for="Credits" class="text-danger" role="alert"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
