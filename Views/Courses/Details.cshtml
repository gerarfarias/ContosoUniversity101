@model ContosoUniversity101.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Credits</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>
</div>

@if (Model.Enrollments != null && Model.Enrollments.Any())
{
    <h4>Enrolled Students</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Student</th>
                <th scope="col">Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Enrollments)
            {
                <tr>
                    <td>@e.Student?.LastName, @e.Student?.FirstName</td>
                    <td>@(e.Grade.HasValue? e.Grade.ToString() : "No grade")</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
