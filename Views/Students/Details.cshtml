@model ContosoUniversity101.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Enrollment Date</dt>
        <dd class="col-sm-10">@Model.EnrollmentDate.ToShortDateString()</dd>
    </dl>
</div>

@if (Model.Enrollments != null && Model.Enrollments.Any())
{
    <h4>Enrollments</h4>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Course</th>
                <th scope="col">Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Enrollments)
            {
                <tr>
                    <td>@e.Course?.Title</td>
                    <td>@(e.Grade.HasValue? e.Grade.ToString() : "No grade")</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
